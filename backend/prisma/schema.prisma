generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserTier {
  FREE
  HOBBY
  PRO
  ENTERPRISE
}

model User {
  id        String    @id @default(cuid())
  githubId  String    @unique
  name      String?
  email     String?   @unique
  avatarUrl String?
  projects  Project[] @relation("UserProjects")
  tier      UserTier  @default(FREE)
}

model Project {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation("UserProjects", fields: [userId], references: [id])
  repoOwner     String
  repoName      String
  webhookSecret String
  accessToken   String?
  previews      Preview[] @relation("ProjectPreviews")
}

model Preview {
  id               String   @id @default(cuid())
  projectId        String
  project          Project  @relation("ProjectPreviews", fields: [projectId], references: [id])
  prNumber         Int
  status           String
  url              String?
  buildLogs        String?
  containerName    String?
  port             Int?
  buildNumber      Int      @default(1)
  buildStartedAt   DateTime?
  buildCompletedAt DateTime?

  @@unique([projectId, prNumber])
}
